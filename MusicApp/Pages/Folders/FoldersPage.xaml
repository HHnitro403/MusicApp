<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.Pages.Folders.FoldersPage"
             Title="FoldersPage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding UnifiedBackCommand}"
                    IsEnabled="{Binding IsBackEnabled}"
                    IsVisible="{Binding IsBackVisible}" />
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">

        <Button x:Name="SelectFolderButton"

                Text="Selecionar Pasta"

                Clicked="SelectFolderButton_Clicked_1"

                HorizontalOptions="Center"

                Margin="0,20,0,20"
                Grid.Row="0"/>

        <Label x:Name="SelectedFolderLabel"

               Grid.Row="1"

               Margin="0,70,0,0"

               HorizontalOptions="Center" />

        <ListView x:Name="FilesListView"
                  Grid.Row="2"/>
    </Grid>
</ContentPage>