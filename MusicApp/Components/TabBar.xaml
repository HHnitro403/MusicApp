<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="MusicApp.Components.TabBar">
    <Grid HeightRequest="75">
        <FlexLayout Direction="Row"
                   AlignItems="Center"
                   JustifyContent="SpaceEvenly">
            <Button mi:MauiIcon.Value="{mi:Material Icon=MusicNote}"
                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                    TextColor="{DynamicResource PrimaryButtonText}"
                    x:Name="MusicButton" Clicked="MusicButton_Clicked" />
            <Button mi:MauiIcon.Value="{mi:Material Icon=Search}"
                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                    TextColor="{DynamicResource PrimaryButtonText}"
                    x:Name="SearchButton" Clicked="SearchButton_Clicked" />
            <Button mi:MauiIcon.Value="{mi:Material Icon=Person}"
                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                    TextColor="{DynamicResource PrimaryButtonText}"
                    x:Name="ArtistButton" Clicked="ArtistButton_Clicked" />
            <Button mi:MauiIcon.Value="{mi:Material Icon=MyLibraryMusic}"
                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                    TextColor="{DynamicResource PrimaryButtonText}"
                    x:Name="Library"  Clicked="LibraryButton_Clicked" />
            <Button mi:MauiIcon.Value="{mi:Material Icon=FolderOpen}"
                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                    TextColor="{DynamicResource PrimaryButtonText}"
                    x:Name="FoldersButton" Clicked="FoldersButton_Clicked" />
        </FlexLayout>
    </Grid>
</ContentView>